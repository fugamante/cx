#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"
BIN_RELEASE="$ROOT_DIR/target/release/cxrs"

if [[ -x "$BIN_RELEASE" ]]; then
  exec "$BIN_RELEASE" "$@"
fi

exec cargo run --manifest-path "$ROOT_DIR/Cargo.toml" -- "$@"
